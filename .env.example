# Server Configuration
PORT=3001
NODE_ENV=development

# Google Earth Engine API
GEE_SERVICE_ACCOUNT_KEY=path/to/service-account-key.json
GEE_PROJECT_ID=your-gee-project-id

# Huawei Cloud Configuration
HUAWEI_ACCESS_KEY_ID=your-huawei-access-key
HUAWEI_SECRET_ACCESS_KEY=your-huawei-secret-key
HUAWEI_REGION=ap-southeast-1
HUAWEI_OBS_BUCKET=farmsight-data
HUAWEI_MODELARTS_ENDPOINT=your-modelarts-endpoint
HUAWEI_GAUSSDB_HOST=your-gaussdb-host
HUAWEI_GAUSSDB_PORT=8000
HUAWEI_GAUSSDB_DB_NAME=farmsight
HUAWEI_GAUSSDB_USER=your-db-user
HUAWEI_GAUSSDB_PASSWORD=your-db-password

# YouTube API Configuration
YOUTUBE_API_KEY=your-youtube-api-key

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key
JWT_EXPIRES_IN=7d

# SMS Configuration (Huawei Cloud SMS)
SMS_ENDPOINT=your-sms-endpoint
SMS_APP_KEY=your-sms-app-key
SMS_APP_SECRET=your-sms-app-secret

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads